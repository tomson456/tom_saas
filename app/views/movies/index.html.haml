-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      
        %th= link_to 'Movie Title', movies_path({:title_header=>1, :release_date_header=>0})
		%th Rating
        %th= link_to "Release Date", movies_path({:title_header=>0, :release_date_header=>1})
        %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
